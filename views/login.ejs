<style>

    * {
        margin: 0;
        padding: 0;
    }

    body {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        background-color: #1f293a;
        justify-content: center;
        align-items: center;
        display: flex;
        min-height: 100vh;
    }

    .container {
        position: relative;
        align-items: center;
        justify-content: center;
        display: flex;
        width: 256px;
        height: 256px;
    }

    .container span {
        position: absolute;
        left: 0;
        width: 32px;
        height: 6px;
        background:#1f293a;
        border-radius: 8px;
        transform-origin: 128px;
        transform: scale(2.2) rotate(calc(var(--i) * 
        (360deg / 50)));
        animation: animate 3s linear infinite;
        animation-delay: calc(var(--i) * (3s / 50));
    }

    @keyframes animate {
        0% {
            background: #0ef;
        }
        25% {
            background: #1f293a;
        }
    
        
    }

    .login-box {
        position: absolute;
        width: 400px;
        
    }

    h2 {

        text-align: center;
        color: #0ef;
    }
    .login-box form {
        width: 100%;
        padding: 0 50px;
    }
    .input-box {
        position: relative;
        margin: 25px 0;
    }

    .input-box input {
        width: 58%;
        height: 50px;
        border-radius: 40px;
        height: 30px;
        background: transparent;
        outline: none;
        border: 2px solid #2c4766;
        transition: .5 ease;
        color: white;
        padding: 0 20px;
    }


    
    .input-box input:focus,
    .input-box input:valid {
       border-color: #0ef;
    }

    .input-box label {
        position: absolute;
        top: 50%;
        left: 20px;
        transform: translateY(-50%);
        font-size: 1em;
        pointer-events: none;
        color: white;
        transition: .5s ease;
    }

    .input-box input:focus~label,
    .input-box input:valid~label {
        top: 1px;
        font-size: .8em;
        color: #0ef;
        background: #1f293a;
    }



    .login-box form {
        padding: 0 50px;
    }

    .input-box {
        padding: 10px 0;
    }

    .forgot-pass{
        margin: -15px 0 10px;
       
    }

    .forgot-pass a {
        font-size: .85em;
        color: white;
        text-decoration: none;
      
        margin-left: 18%;

    }

    .forgot-pass a:hover {
        text-decoration: underline;

    }

    .signup-link {
        margin: 20px 0 10px ;
        text-align: center;
    }

     .signup-link a {
        font-size: 1em;
        color: #0ef;
        text-decoration: none;
        font-weight: 600;
     }

    .btn {
        width: 70%;
        height: 40px;
        background: #0ef;
        border: none;
        outline: none;
        border-radius: 40px;
        cursor: pointer;
        font-size: 1em;
        color: #1f293a;
        font-weight: 600;
    }

</style>
